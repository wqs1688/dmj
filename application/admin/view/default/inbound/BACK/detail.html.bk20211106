<!-- 继承公共的 form -->
{{extend name="public/module/detail" /}}

<!-- 重写数据模块 -->
{{block name="detail_data"}}
    <!-- 父级内容 -->
    {__block__}
    
    <!-- 规格 -->
    <div class="am-panel am-panel-default">
        <div class="am-panel-hd">规格库存</div>
        <div class="am-panel-bd">
            {{if !empty($spec)}}
                <table class="am-table am-table-striped am-table-hover form-inventory-container">
                    <thead>
                        <tr>
                            <th>规格</th>
                            <th>库存</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{foreach $spec as $v}}
                            <tr>
                                <td>{{$v.name}}</td>
                                <td>
                                {{if empty($v['inventory'])}}
                                    <span class="am-text-grey">无</span>
                                {{else /}}
                                    {{$v.inventory}}
                                {{/if}}
                            </tr>
                        {{/foreach}}
                    </tbody>
                </table>
            {{else /}}
                {{include file="public/not_data" /}}
            {{/if}}
        </div>
    </div>

    <!-- 核查结果 -->
    <div class="am-panel am-panel-default">
        <div class="am-panel-hd">核查结果</div>
        <div class="am-panel-bd">
            {{$data.check_info}}
        </div>
    </div>
{{/block}}
